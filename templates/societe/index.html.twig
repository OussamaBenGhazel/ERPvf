{% extends 'base.html.twig' %}

{% block title %}Societe index{% endblock %}

{% block body %}
    <h1>Societe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Societe</th>
                <th>Adresse</th>
                <th>Numero de telephone</th>
                <th>Email</th>
                <th>Statut juridique</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for societe in societes %}
            <tr>
                <td>{{ societe.id }}</td>
                <td>{{ societe.societe }}</td>
                <td>{{ societe.adresse }}</td>
                <td>{{ societe.numdetel }}</td>
                <td>{{ societe.email }}</td>
                <td>{{ societe.statutjuridique }}</td>
                <td>
                     <a href="{{ path('app_societe_show', {'id': societe.id}) }}" class="action-button">Show</a>
                     <a href="{{ path('app_societe_edit', {'id': societe.id}) }}" class="action-button">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                 <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_societe_new') }}" class="create-new-btn">Create New</a>
{% endblock %}
