{% extends 'base.html.twig' %}

{% block title %}Societe{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="societe-heading">Societe</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ societe.id }}</td>
                </tr>
                <tr>
                    <th>Societe</th>
                    <td>{{ societe.societe }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ societe.adresse }}</td>
                </tr>
                <tr>
                    <th>Numdetel</th>
                    <td>{{ societe.numdetel }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ societe.email }}</td>
                </tr>
                <tr>
                    <th>Statutjuridique</th>
                    <td>{{ societe.statutjuridique }}</td>
                </tr>
            </tbody>
        </table>

        <div class="actions">
            <a href="{{ path('app_societe_index') }}" class="back-link">Back to List</a>
            <a href="{{ path('app_societe_edit', {'id': societe.id}) }}" class="btn">Edit</a>
            {{ include('societe/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
