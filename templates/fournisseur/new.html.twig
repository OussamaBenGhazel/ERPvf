{% extends 'base.html.twig' %}

{% block title %}New Fournisseur{% endblock %}

{% block body %}
    
    <div class="form-container">
        <h1>Create New Fournisseur</h1>

        {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
        <div class="form-group">
            {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-input'}}) }}
            {% if form_errors(form.nom) %}
                <div class="error-message">{{ form_errors(form.nom) }}</div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.adresse, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.adresse, {'attr': {'class': 'form-input'}}) }}
            {% if form_errors(form.adresse) %}
                <div class="error-message">{{ form_errors(form.adresse) }}</div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.numdetel, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.numdetel, {'attr': {'class': 'form-input'}}) }}
            {% if form_errors(form.numdetel) %}
                <div class="error-message">{{ form_errors(form.numdetel)}}</div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-input'}}) }}
            {% if form_errors(form.email) %}
                <div class="error-message">{{ form_errors(form.email) }}</div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.societe, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.societe, {'attr': {'class': 'form-input'}}) }}
            {% if form_errors(form.societe) %}
                <div class="error-message">{{ form_errors(form.societe) }}</div>
            {% endif %}
        </div>

        <button type="submit" class="btn">Save</button>
        <a href="{{ path('app_fournisseur_index') }}" class="back-link">Back to list</a>
        {{ form_end(form) }}
    </div>
    {% endblock %}