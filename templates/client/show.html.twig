{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/style.css">
{% endblock %}

{% block body %}
    <h1 class="title1">Client</h1>

    <table class="table1">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.adresse }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ client.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_client_index') }}"><button type="button" class="btn btn-light">back to list</button></a>
    <a href="{{ path('app_client_edit', {'id': client.id}) }}"><button type="button" class="btn btn-secondary">Edit Client</button></a>
    <br></br>
<button type="button" class="btn btn-danger">
    {{ include('client/_delete_form.html.twig') }}
</button>

{% endblock %}
